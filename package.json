{
    "name": "devicecheckerreact",
    "private": true,
    "version": "1.0.2",
    "type": "module",
    "author": {
        "name": "Snw",
        "email": "lanle101017@gmail.com"
    },
    "description": "A tool to check device information.",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "electron": "electron .",
        "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
        "electron:pack": "electron-builder",
        "electron:dist": "rm -rf ./release && npm run build && electron-builder"
    },
    "dependencies": {
        "axios": "^1.12.2",
        "docx-pdf": "^0.0.1",
        "docxtemplater": "^3.66.3",
        "electron-log": "^5.4.3",
        "electron-updater": "^6.6.2",
        "exceljs": "^4.4.0",
        "jspdf": "^3.0.2",
        "jspdf-autotable": "^5.0.2",
        "lucide-react": "^0.544.0",
        "pizzip": "^3.2.0",
        "png-to-ico": "^3.0.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "sharp": "^0.34.3",
        "systeminformation": "^5.27.9"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@tailwindcss/postcss": "^4.1.13",
        "@types/jspdf": "^1.3.3",
        "@types/node": "^24.4.0",
        "@types/react": "^19.1.10",
        "@types/react-dom": "^19.1.7",
        "@vitejs/plugin-react": "^5.0.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.1",
        "docx": "^9.5.1",
        "electron": "^38.1.0",
        "electron-builder": "^26.0.12",
        "eslint": "^9.33.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.13",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.39.1",
        "vite": "^7.1.2",
        "vite-plugin-electron": "^0.29.0",
        "wait-on": "^8.0.5"
    },
    "main": "dist-electron/main.js",
    "repository": {
        "url": "https://github.com/lanleworking/SCheker",
        "type": "git"
    },
    "build": {
        "appId": "com.lanleworking.schecker",
        "productName": "SChecker",
        "directories": {
            "output": "release",
            "buildResources": "build"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "!node_modules/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon.ico",
            "requestedExecutionLevel": "asInvoker",
            "signAndEditExecutable": false,
            "verifyUpdateCodeSignature": false,
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico",
            "shortcutName": "SChecker"
        },
        "publish": {
            "provider": "github",
            "owner": "lanleworking",
            "repo": "SCheker",
            "private": false,
            "releaseType": "release"
        }
    }
}
